---
import config from "@config";
import { a } from "@class/utils";

export interface Props {}

const { navigator } = config;
---

<header
  class="min-h-[3rem] w-full md:w-5/6 mx-auto box-border px-4 md:px-0 mt-8 md:mt-16 space-y-3 sm:space-y-4 lg:space-y-8"
>
  <h1 class="text-7/2xl md:text-4xl lg:text-5xl text-shadow-aliceblue">
    {
      () => {
        if (config.abbr)
          return (
            <>
              <span class="sm:hidden">{config.abbr}</span>
              <span class="hidden sm:inline">{config.name}</span>
            </>
          );
        else return config.name;
      }
    }
  </h1>
  <nav
    class="border-y-[.1rem] bg-aliceblue bg-opacity-[2%] flex flex-row justify-end w-full lg:w-11/12 mx-auto"
  >
    {
      navigator.map((tuple) => {
        let classes = [
          "px-2",
          "md:px-3",
          "lg:px-4",
          "py-0.5",
          "sm:py-1",
          "md:py-2",
          "lg:py-2",
          "[user-select:none]"
        ];
        classes.push(...a);
        if (tuple[2]) classes.push("hidden", `${tuple[2]}:inline-block`);
        else classes.push("inline-block");
        return (
          <a class={classes.join(" ")} href={tuple[1]}>{tuple[0]}</a>
        );
      })
    }
  </nav>
  <div class="hidden">
    <span
      class="hover:text-cyan-400 md:inline-block lg:inline-block sm:inline-block selection:bg-transparent"
      >100</span
    >
  </div>
</header>
